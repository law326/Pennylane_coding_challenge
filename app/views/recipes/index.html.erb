<h1>Recipes Hub</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Cook Time</th>
    <th>Category</th>
    <th>Ingredients</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.title %></td>
      <td><%= recipe.cook_time %></td>
      <td><%= recipe.category %></td>
      <td><%= recipe.ingredients.join(', ') %></td>
    </tr>
  <% end %>
</table>

<%= paginate @recipes %>
